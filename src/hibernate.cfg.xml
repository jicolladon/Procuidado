<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="MySQL">
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">32p64r</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/procuidado</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <mapping resource="modelo/Guardia.hbm.xml" />
        <mapping resource="modelo/Residente.hbm.xml" />
        <mapping resource="modelo/EmergenciaDeResidentePorPermanenciaProlongada.hbm.xml" />
        <mapping resource="modelo/Permiso.hbm.xml" />
        <mapping resource="modelo/Perfil.hbm.xml" />
        <mapping resource="modelo/ConstanteActiva.hbm.xml" />
        <mapping resource="modelo/Estancia.hbm.xml" />
        <mapping resource="modelo/NotificacionDeEmergencia.hbm.xml" />
        <mapping resource="modelo/PatronDeRepeticion.hbm.xml" />
        <mapping resource="modelo/RestriccionHoraria.hbm.xml" />
        <mapping resource="modelo/ConstanteVital.hbm.xml" />
        <mapping resource="modelo/ConstanteLeida.hbm.xml" />
        <mapping resource="modelo/Recordatorio.hbm.xml" />
        <mapping resource="modelo/Casa.hbm.xml" />
        <mapping resource="modelo/Cuidador.hbm.xml" />
        <mapping resource="modelo/EmergenciaPorConstante.hbm.xml" />
        <mapping resource="modelo/Calendario.hbm.xml" />
        <mapping resource="modelo/Persona.hbm.xml" />
        <mapping resource="modelo/SolicitudDeCambioDeGuardia.hbm.xml" />
    </session-factory>
</hibernate-configuration>
